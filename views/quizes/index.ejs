<form method="get" action="/quizes">
	<p>Buscar texto en preguntas: </p>
	<input type="text" name="search" value="Texto a buscar" />
	<input type="submit" value="Enviar" />
</form>
<table>
	<tr>
		<td>
			<table class="search">
				<tr><td>Preguntas:</td></tr>
				<% var i; for (i=0; i < quizes.length; i++) { %>
					<tr><td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td></tr>
				<% } %>
			</table>
		</td>
		<td>
			<table class="search">
				<% if(search !== undefined  && search !== '') { %>
					<tr><td>Resultados de la b√∫squeda:</td></tr>
					<% var x; for (x=0; x < search.length; x++) { %>
						<tr><td><%= search[x].pregunta %></td></tr>
					<% } %>
				<% } %>
			</table>		
		</td>
	</tr>
</table>